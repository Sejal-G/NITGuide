<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawerlayout"
    tools:context=".MainActivity">

    <!--<LinearLayout-->
        <!--android:layout_width="240dp"-->
        <!--android:layout_height="match_parent"-->
        <!--android:layout_gravity="start"-->
        <!--android:background="@color/colorPrimary"></LinearLayout>-->

    <com.google.android.material.navigation.NavigationView
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:menu="@menu/drawer_menu"
        app:headerLayout="@layout/header"
        ></com.google.android.material.navigation.NavigationView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:theme="@style/Base.ThemeOverlay.AppCompat.Dark.ActionBar"></androidx.appcompat.widget.Toolbar>

        <androidx.gridlayout.widget.GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp"
            android:background="#FFFFFF"
            app:columnCount="2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:rowCount="5">


            <ImageView
                android:id="@+id/prevyear"
                android:layout_width="138dp"
                android:layout_height="114dp"
                app:layout_column="0"
                app:layout_row="0"
                app:srcCompat="@drawable/gmail" />

            <ImageView
                android:id="@+id/timetable"
                android:layout_width="118dp"
                android:layout_height="128dp"
                app:layout_column="1"
                app:layout_row="0"
                app:srcCompat="@drawable/timetable" />

            <ImageView
                android:id="@+id/places"
                android:layout_width="165dp"
                android:layout_height="113dp"
                android:layout_marginTop="40dp"
                app:layout_column="0"
                app:layout_row="1"
                app:srcCompat="@drawable/map" />

            <ImageView
                android:id="@+id/cdetails"
                android:layout_width="144dp"
                android:layout_height="103dp"
                android:layout_marginTop="40dp"
                app:layout_column="1"
                app:layout_row="1"
                app:srcCompat="@drawable/contact_details" />

            <ImageView
                android:id="@+id/website"
                android:layout_width="165dp"
                android:layout_height="119dp"
                android:layout_marginTop="40dp"
                app:layout_column="0"
                app:layout_row="2"
                app:srcCompat="@drawable/website" />

            <ImageView
                android:id="@+id/cmap"
                android:layout_width="150dp"
                android:layout_height="106dp"
                android:layout_marginTop="40dp"
                app:layout_column="1"
                app:layout_row="2"
                app:srcCompat="@drawable/cmap" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="124dp"
                android:layout_height="33dp"
                android:layout_marginLeft="50dp"
                android:text="Gmail"
                android:textSize="20sp"
                app:layout_column="0"
                app:layout_row="1" />


            <TextView
                android:id="@+id/tv_timetable"
                android:layout_width="124dp"
                android:layout_height="33dp"
                android:layout_marginLeft="50dp"
                android:text="Time table"
                android:textSize="20sp"
                app:layout_column="1"
                app:layout_row="1" />

            <TextView
                android:id="@+id/tv_places"
                android:layout_width="124dp"
                android:layout_height="33dp"
                android:layout_marginLeft="50dp"
                android:text="Places"
                android:textSize="20sp"
                app:layout_column="0"
                app:layout_row="2" />

            <TextView
                android:id="@+id/tv_contacts"
                android:layout_width="124dp"
                android:layout_height="33dp"
                android:layout_marginLeft="50dp"
                android:text="Contact"
                android:textSize="20sp"
                app:layout_column="1"
                app:layout_row="2" />
            " />


            <TextView
                android:id="@+id/tv_maps"
                android:layout_width="134dp"
                android:layout_height="33dp"
                android:layout_marginLeft="20dp"
                android:text="Campus map"
                android:textSize="20sp"
                app:layout_column="1"
                app:layout_row="3" />

            <TextView
                android:id="@+id/tv_website"
                android:layout_width="124dp"
                android:layout_height="33dp"
                android:layout_marginLeft="50dp"
                android:text="Website"
                android:textSize="20sp"
                app:layout_column="0"
                app:layout_row="3" />


        </androidx.gridlayout.widget.GridLayout>
    </LinearLayout>




</androidx.drawerlayout.widget.DrawerLayout>